<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.repair.RepairActivity">

    <include
        android:id="@+id/title"
        layout="@layout/layout_common_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_style"
        android:layout_marginTop="@dimen/title_margin_top_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/companyNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/place"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <EditText
            android:id="@+id/companyName"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:gravity="center_vertical|right"
            android:hint="@string/input_address"
            android:textColor="@color/font_color_style_five"
            android:textSize="@dimen/font_size_style_one" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_style_six"
        app:layout_constraintTop_toBottomOf="@id/companyNameLayout" />

    <RelativeLayout
        android:id="@+id/contactLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/contact_phone"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="144dp"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:background="@android:color/white"
            android:gravity="center_vertical|right"
            android:hint="@string/input_contact_phone"
            android:textColor="@color/font_color_style_five"
            android:textSize="@dimen/font_size_style_one" />
    </RelativeLayout>

    <View
        android:id="@+id/lineThree"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_style_six"
        app:layout_constraintTop_toBottomOf="@id/contactLayout" />


    <RelativeLayout
        android:id="@+id/confirmPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/lineThree">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:gravity="center_vertical"
            android:text="@string/type"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <TextView
            android:id="@+id/repair_type"
            android:layout_width="144dp"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ic_more_info"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|right"
            android:text="设备损坏"
            android:textColor="@color/font_color_style_five"
            android:textSize="@dimen/font_size_style_one" />
    </RelativeLayout>

    <View
        android:id="@+id/lineFour"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_style_six"
        app:layout_constraintTop_toBottomOf="@id/confirmPasswordLayout" />


    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/lineFour">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_marginRight="@dimen/margin_style_four"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/content"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />


        <RelativeLayout
            android:id="@+id/suggestionLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/content"
            android:background="@android:color/white">

            <EditText
                android:id="@+id/contentEdit"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/white"
                android:focusedByDefault="true"
                android:gravity="start"
                android:hint="@string/input_content"
                android:maxLength="60"
                android:padding="12dp" />

            <TextView
                android:id="@+id/wordCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/margin_style_four"
                android:text="0/60"
                android:textColor="@color/font_color_style_seven"
                android:textSize="@dimen/font_size_style_one" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content"
            android:layout_marginTop="@dimen/margin_style_six"
            android:layout_marginBottom="@dimen/margin_style_two">

            <RelativeLayout
                android:id="@+id/addImage1Layout"
                android:layout_width="80dp"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/addImage1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_add_file" />

                <TextView
                    android:id="@+id/state1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="上传中..."
                    android:textColor="@color/font_color_style_six"
                    android:textSize="@dimen/font_size_style_one"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/clearImage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_clear"
                    android:visibility="visible" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/addImage2Layout"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/addImage2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_add_file" />

                <TextView
                    android:id="@+id/state2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="上传中..."
                    android:textColor="@color/font_color_style_six"
                    android:textSize="@dimen/font_size_style_one"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_clear"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addImage3Layout"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/addImage3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_add_file" />

                <TextView
                    android:id="@+id/state3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="上传中..."
                    android:textColor="@color/font_color_style_six"
                    android:textSize="@dimen/font_size_style_one"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_clear" />
            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/save"
        style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/save"
        app:layout_constraintTop_toBottomOf="@id/contentLayout" />

    <com.gx.smart.lib.widget.LoadingView
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>