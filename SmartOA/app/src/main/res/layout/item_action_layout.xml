<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="com.gx.wisestone.work.app.grpc.activity.AppActivityDto" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_style_four"
            android:layout_marginTop="@dimen/margin_style_five"
            android:layout_marginRight="@dimen/margin_style_four"
            android:layout_marginBottom="@dimen/margin_style_five"
            android:background="@drawable/shape_list_item_background_color">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/actionImageView"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@android:color/white"
                android:scaleType="fitXY"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:url="@{data.imageUrl}"
                tools:src="@mipmap/home_banner_test" />

            <View
                android:id="@+id/redFlag"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/shape_home_message_point"
                android:visibility="@{data.hasRead ? View.GONE: View.VISIBLE}"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/actionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_style_four"
                android:layout_marginTop="7.5dp"
                android:layout_marginRight="@dimen/margin_style_four"
                android:ellipsize="end"
                android:text="@{data.title}"
                android:textColor="@color/font_color_style_six"
                android:textSize="@dimen/font_size_style_one"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/actionImageView"
                tools:text="广信篮球队报名开始啦！" />


            <TextView
                android:id="@+id/actionTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_style_four"
                android:layout_marginTop="7.5dp"
                android:layout_marginRight="@dimen/margin_style_four"
                android:drawableLeft="@drawable/ic_time_ic"
                android:drawablePadding="3.5dp"
                android:ellipsize="end"
                android:textColor="@color/font_color_style_seven"
                android:textSize="@dimen/font_size_style_four"
                app:endTime="@{data.endTime}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/actionTitle"
                app:startTime="@{data.startTime}"
                tools:text="2019-10-10 14:39" />

            <TextView
                android:id="@+id/actionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_style_four"
                android:layout_marginRight="@dimen/margin_style_four"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:textColor="@color/font_color_style_five"
                android:textSize="@dimen/font_size_style_three"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/actionTitle"
                app:number="@{data.currentNum}"
                tools:text="5人参加" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@id/actionTime" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>