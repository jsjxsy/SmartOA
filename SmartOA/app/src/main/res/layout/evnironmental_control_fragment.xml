<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ui.environmental.EnvironmentalControlFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_environmental_control_head"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:paddingTop="16dp"
        android:paddingLeft="12dp"
        android:background="@android:color/white"
        android:paddingRight="12dp"
        android:paddingBottom="16dp"
        android:orientation="vertical"
        app:spanCount="5"
        tools:itemCount="5"
        tools:listitem="@layout/item_environmental_control_head_text_view"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/id_environmental_control_tab"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:textAlignment="center"
        app:tabIndicatorColor="@color/background_style_two"
        app:tabIndicatorHeight="2dp"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabSelectedTextColor="@color/font_color_style_two"
        app:tabTextColor="@color/font_color_style_six" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</androidx.appcompat.widget.LinearLayoutCompat>