<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    tools:context=".activity.ui.air.AirQualityActivity">

    <TextView
        android:id="@+id/place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="center"
        android:text="10"
        android:textColor="@color/font_color_style_six"
        android:textSize="@dimen/font_size_style_one" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center_vertical">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_style_four">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_style_two"
                android:text="上班时间:"
                android:textColor="@color/font_color_style_six"
                android:textSize="@dimen/font_size_style_one" />

            <TextView
                android:id="@+id/timeWorkOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:30:20"
                android:textColor="@color/font_color_style_six"
                android:textSize="@dimen/font_size_style_one" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background_style_five" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_style_four">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_style_two"
                android:text="下班时间:"
                android:textColor="@color/font_color_style_six"
                android:textSize="@dimen/font_size_style_one" />

            <TextView
                android:id="@+id/timeWorkOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:19:19"
                android:textColor="@color/font_color_style_six"
                android:textSize="@dimen/font_size_style_one" />

        </TableRow>
    </TableLayout>
</LinearLayout>
