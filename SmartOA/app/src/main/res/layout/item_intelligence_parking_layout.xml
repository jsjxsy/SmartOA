<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="15dp">

    <ImageView
        android:id="@+id/carImage"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/home_banner_test" />

    <TextView
        android:id="@+id/address"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toEndOf="@id/carImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="悦盛国际地下停车场" />


    <TextView
        android:id="@+id/parking"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        android:text="总 车  位："
        app:layout_constraintStart_toEndOf="@id/carImage"
        app:layout_constraintTop_toBottomOf="@id/address" />

    <TextView
        android:id="@+id/parkingCount"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        app:layout_constraintStart_toEndOf="@id/parking"
        app:layout_constraintTop_toBottomOf="@id/address"
        tools:text="100" />


    <TextView
        android:id="@+id/remaining"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        android:text="剩余车位："
        app:layout_constraintStart_toEndOf="@id/carImage"
        app:layout_constraintTop_toBottomOf="@id/parking" />

    <TextView
        android:id="@+id/remainingCount"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        app:layout_constraintStart_toEndOf="@id/remaining"
        app:layout_constraintTop_toBottomOf="@id/parking"
        tools:text="30" />

    <TextView
        android:id="@+id/chargingStandard"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        app:layout_constraintStart_toEndOf="@id/carImage"
        app:layout_constraintTop_toBottomOf="@id/remaining"
        tools:text="收费标准:" />

    <TextView
        android:id="@+id/charging"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        app:layout_constraintStart_toEndOf="@id/chargingStandard"
        app:layout_constraintTop_toBottomOf="@id/remaining"
        tools:text="5元/小时" />
</androidx.constraintlayout.widget.ConstraintLayout>
