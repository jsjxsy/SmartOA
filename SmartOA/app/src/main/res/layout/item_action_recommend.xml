<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/shape_home_action_recommend"
        android:drawablePadding="4.5dp"
        android:text="@string/action_recommend"
        android:textColor="@color/font_color_style_six"
        android:textSize="@dimen/font_size_style_two"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_home_action_recommend_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/ic_more_info"
        android:drawablePadding="3.5dp"
        android:text="@string/more"
        android:textColor="@color/font_color_style_five"
        android:textSize="@dimen/font_size_style_one"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/id_home_action_recommend_image_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="19.5dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_home_action_recommend_more"
        tools:src="@mipmap/home_banner_test" />

    <TextView
        android:id="@+id/id_home_action_recommend_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.5dp"
        android:ellipsize="end"
        android:textColor="@color/font_color_style_six"
        android:textSize="@dimen/font_size_style_one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_home_action_recommend_image_view"
        tools:text="广信篮球队报名开始啦！" />


    <TextView
        android:id="@+id/id_time_action_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.5dp"
        android:drawableLeft="@drawable/ic_time_ic"
        android:drawablePadding="3.5dp"
        android:ellipsize="end"
        android:textColor="@color/font_color_style_seven"
        android:textSize="@dimen/font_size_style_four"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_home_action_recommend_title"
        tools:text="2019-10-10 14:39" />

    <TextView
        android:id="@+id/id_number_action_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="6dp"
        android:ellipsize="end"
        android:textColor="@color/font_color_style_five"
        android:textSize="@dimen/font_size_style_three"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_home_action_recommend_title"
        tools:text="5人参加" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/id_time_action_recommend" />
</androidx.constraintlayout.widget.ConstraintLayout>
