<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/layout_common_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_style"
        android:layout_marginTop="@dimen/title_margin_top_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_style_one">

        <TextView
            style="@style/textViewStyleTwo"
            android:text="请输入要查询的车牌（新能源车辆选填）" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/carNoEditText"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:focusable="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_style_two"
                android:layout_marginBottom="@dimen/margin_style_two"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/carNo1"
                    style="@style/textViewStyleThree"
                    android:layout_marginRight="@dimen/margin_style_night" />

                <TextView
                    android:id="@+id/carNo2"
                    style="@style/textViewStyleThree"
                    android:layout_marginRight="@dimen/margin_style_three" />

                <TextView
                    android:id="@+id/carNo3"
                    style="@style/textViewStyleThree"
                    android:layout_marginRight="@dimen/margin_style_night" />

                <TextView
                    android:id="@+id/carNo4"
                    style="@style/textViewStyleThree"
                    android:layout_marginRight="@dimen/margin_style_night" />

                <TextView
                    android:id="@+id/carNo5"
                    style="@style/textViewStyleThree"
                    android:layout_marginRight="@dimen/margin_style_night" />

                <TextView
                    android:id="@+id/carNo6"
                    style="@style/textViewStyleThree"
                    android:layout_marginRight="@dimen/margin_style_night" />

                <TextView
                    android:id="@+id/carNo7"
                    style="@style/textViewStyleThree"
                    android:layout_marginRight="@dimen/margin_style_night" />

                <TextView
                    android:id="@+id/carNo8"
                    style="@style/textViewStyleThree"
                    android:minWidth="30dp"
                    android:layout_width="wrap_content"
                    android:text="新能源"
                    android:textColor="@color/font_color_style_night"
                    />

            </LinearLayout>
        </RelativeLayout>


        <TextView
            style="@style/textViewStyleTwo"
            android:text="查询记录" />


        <com.donkingliang.labels.LabelsView
            android:id="@+id/labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_style_two"
            app:isIndicator="true"
            app:labelBackground="@drawable/shape_edit_text_background"
            app:labelTextColor="@color/font_color_style_seven"
            app:labelTextPaddingBottom="5dp"
            app:labelTextPaddingLeft="10dp"
            app:labelTextPaddingRight="10dp"
            app:labelTextPaddingTop="5dp"
            app:labelTextSize="14sp"
            app:lineMargin="10dp"
            app:maxLines="1"
            app:maxSelect="4"
            app:minSelect="1"
            app:selectType="SINGLE"
            app:wordMargin="10dp" />

    </LinearLayout>


    <Button
        android:id="@+id/query"
        style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_style_two"
        android:text="查询" />

</LinearLayout>