<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_style_four"
        android:layout_marginTop="@dimen/margin_style_seven"
        android:layout_marginRight="@dimen/margin_style_four"
        android:layout_marginBottom="@dimen/margin_style_seven"
        android:background="@drawable/shape_list_item_background_color"
        android:gravity="center"
        android:padding="@dimen/padding_style_one">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/selector_environmental_curtain"
            android:drawablePadding="7.5dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@drawable/selector_environmental_light_text_view"
            android:textSize="@dimen/font_size_style_one"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="研发窗帘1" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="11dp"
            android:background="@color/background_style_six"
            app:layout_constraintTop_toBottomOf="@id/text" />

        <RadioGroup
            android:id="@+id/curtainGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/open"
                style="@style/bottomTabTitle"
                android:drawableTop="@drawable/selector_environmental_curtain_open_radio_button_state"
                android:text="@string/open" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/pause"
                style="@style/bottomTabTitle"
                android:drawableTop="@drawable/selector_environmental_curtain_pause_radio_button_state"
                android:text="@string/pause" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/close"
                style="@style/bottomTabTitle"
                android:drawableTop="@drawable/selector_environmental_curtain_close_radio_button_state"
                android:text="@string/close" />
        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

