<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="15dp">


    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:textColor="@color/font_color_style_six"
        android:textSize="@dimen/font_size_style_two"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="研发中心吊灯不亮了" />

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_style_four"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/font_size_style_two"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="不处理" />

    <TextView
        android:id="@+id/employeeNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_style_four"
        android:textColor="@color/font_color_style_six"
        android:textSize="@dimen/font_size_style_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content"
        tools:text="处理人:" />

    <TextView
        android:id="@+id/employeeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/margin_style_four"
        android:layout_marginRight="@dimen/margin_style_four"
        android:textColor="@color/font_color_style_six"
        android:textSize="@dimen/font_size_style_two"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/employeeNameText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content"
        tools:text="- -" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_style_four"
        android:textColor="@color/font_color_style_six"
        android:textSize="@dimen/font_size_style_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/employeeNameText"
        tools:text="处理时间:" />

    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/margin_style_four"
        android:textColor="@color/font_color_style_six"
        android:textSize="@dimen/font_size_style_two"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/timeText"
        app:layout_constraintTop_toBottomOf="@id/employeeNameText"
        tools:text="- -" />

</androidx.constraintlayout.widget.ConstraintLayout>
