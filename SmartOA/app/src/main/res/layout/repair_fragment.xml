<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.repair.RepairActivity">

    <include
        android:id="@+id/title"
        layout="@layout/layout_common_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_style"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/companyNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/place"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one"
            />

        <TextView
            android:id="@+id/visitorName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="国际中心"
            />
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/companyNameLayout"
        android:background="@color/background_style_six" />

    <RelativeLayout
        android:id="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/contact_phone"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one"
            />

        <EditText
            android:id="@+id/phone"
            android:layout_width="144dp"
            android:layout_height="@dimen/list_item_height_style"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            android:hint="@string/input_contact_phone"
            android:background="@android:color/white"/>
    </RelativeLayout>
    <View
        android:id="@+id/lineThree"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/phoneLayout"
        android:background="@color/background_style_six" />


    <RelativeLayout
        android:id="@+id/timeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/lineThree"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:gravity="center_vertical"
            android:text="@string/type"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one"
            />

        <TextView
            android:id="@+id/repair_type"
            android:layout_width="144dp"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:drawableRight="@drawable/ic_more_info"
            android:drawablePadding="8dp"
            android:text="设备损坏" />
    </RelativeLayout>
    <View
        android:id="@+id/lineFour"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/timeLayout"
        android:background="@color/background_style_six" />


    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/lineFour"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/content"
            android:layout_marginRight="@dimen/margin_style_four"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one"
            />

        <EditText
            android:id="@+id/contentEdit"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/content"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:hint="@string/input_content" />

        <ImageView
            android:layout_below="@id/content"
            android:id="@+id/addImage"
            android:layout_marginTop="@dimen/margin_style_six"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_add"
            android:layout_marginBottom="@dimen/margin_style_two"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/save"
        style="@style/buttonStyle"
        app:layout_constraintTop_toBottomOf="@id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/save"
        />
</androidx.constraintlayout.widget.ConstraintLayout>