<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_list_item_background_color"
    android:gravity="center"
    android:paddingTop="11dp"
    android:paddingBottom="11dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:drawableLeft="@drawable/selector_environmental_light_background"
        android:drawablePadding="7.5dp"
        android:gravity="center_vertical"
        android:textColor="@drawable/selector_environmental_light_text_view"
        android:textSize="@dimen/font_size_style_one"
        tools:text="研发大灯1" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchLight"
        android:layout_width="44dp"
        android:layout_height="23dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:theme="@style/switchStyle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/switchLight"
        android:layout_marginTop="11dp"
        android:background="@color/background_style_six" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/light_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_light_bright_small" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/light_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="52dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_light_bright_big" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/light_small"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_toLeftOf="@id/light_big"
        android:background="@color/background_style_two"
        />

</RelativeLayout>
