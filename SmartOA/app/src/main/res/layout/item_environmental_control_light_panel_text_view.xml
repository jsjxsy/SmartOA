<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_style_four"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/margin_style_four"
        android:layout_marginBottom="4dp"
        android:background="@drawable/shape_list_item_background_color"
        android:gravity="center"
        android:padding="@dimen/padding_style_one">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@drawable/selector_environmental_light_panel_background"
            android:drawablePadding="7.5dp"
            android:gravity="center_vertical"
            android:textColor="@drawable/selector_environmental_light_text_view"
            android:textSize="@dimen/font_size_style_one"
            tools:text="研发大灯1" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchLight"
            android:layout_width="44dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:theme="@style/switchStyle" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/switchLight"
            android:layout_marginTop="11dp"
            android:background="@color/background_style_six" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/light_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="52dp"
            android:src="@drawable/ic_light_bright_small" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/light_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="49dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_light_bright_big" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:layout_toLeftOf="@id/light_big"
            android:layout_toRightOf="@id/light_small"
            android:indeterminate="false"
            android:max="100"
            android:progress="30"
            android:progressDrawable="@drawable/selector_seek_bar"
            android:thumb="@drawable/ic_seek_bar_thumb" />

    </RelativeLayout>
</LinearLayout>