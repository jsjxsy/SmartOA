<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.repair.RepairActivity">

    <include
        android:id="@+id/title"
        layout="@layout/layout_common_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_style"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/companyNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/company_name"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <TextView
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="国际中心" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_style_six"
        app:layout_constraintTop_toBottomOf="@id/companyNameLayout" />


    <RelativeLayout
        android:id="@+id/employeeNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:gravity="center_vertical"
            android:text="@string/employee_name"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <TextView
            android:id="@+id/employee_name"
            android:layout_width="144dp"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ic_more_info"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|right"
            android:text="张三" />
    </RelativeLayout>

    <View
        android:id="@+id/lineThree"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_style_six"
        app:layout_constraintTop_toBottomOf="@id/employeeNameLayout" />

    <RelativeLayout
        android:id="@+id/cacheLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/lineThree">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/contact_phone"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_more_info"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/contact_phone" />
    </RelativeLayout>

    <View
        android:id="@+id/lineFour"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_style_six"
        app:layout_constraintTop_toBottomOf="@id/cacheLayout" />


    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/lineFour">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_marginRight="@dimen/margin_style_four"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/employee_card"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />


        <ImageView
            android:id="@+id/addImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="@dimen/margin_style_two"
            android:src="@drawable/ic_add" />
    </RelativeLayout>

    <Button
        android:id="@+id/submit_apply"
        style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/submit_apply"
        app:layout_constraintTop_toBottomOf="@id/contentLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>