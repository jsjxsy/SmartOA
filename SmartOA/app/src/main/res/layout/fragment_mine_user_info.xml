<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.user.UserActivity">

    <include
        android:id="@+id/title"
        layout="@layout/layout_common_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_style"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/headLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:gravity="center_vertical"
            android:text="@string/head_image"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <ImageView
            android:id="@+id/headImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_head"
            tools:src="@drawable/ic_head" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more_info" />
    </RelativeLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_style_six"
        app:layout_constraintTop_toBottomOf="@id/headLayout" />

    <RelativeLayout
        android:id="@+id/nickNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:gravity="center_vertical"
            android:text="@string/nick_name"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <TextView
            android:id="@+id/nickName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ic_more_info"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/input_nick_name"
            android:textColor="@color/font_color_style_five"
            tools:text="张嘉译" />
    </RelativeLayout>

    <View
        android:id="@+id/lineTwo"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_style_six"
        app:layout_constraintTop_toBottomOf="@id/nickNameLayout" />

    <RelativeLayout
        android:id="@+id/suggestionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/lineTwo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:gravity="center_vertical"
            android:text="@string/sex"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ic_more_info"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="未知"
            android:textColor="@color/font_color_style_five"
            tools:text="男" />
    </RelativeLayout>

    <View
        android:id="@+id/lineThree"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/margin_style_one"
        android:background="@color/background_style_six"
        app:layout_constraintTop_toBottomOf="@id/suggestionLayout" />


    <RelativeLayout
        android:id="@+id/aboutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/lineThree">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:gravity="center_vertical"
            android:text="@string/bind_phone"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ic_more_info"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textColor="@color/font_color_style_five"
            tools:text="130000000000" />
    </RelativeLayout>

    <View
        android:id="@+id/lineFour"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_style_six"
        app:layout_constraintTop_toBottomOf="@id/aboutLayout" />


    <RelativeLayout
        android:id="@+id/verifyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/lineFour">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:gravity="center_vertical"
            android:text="@string/identification_verify"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <TextView
            android:id="@+id/identificationVerify"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ic_more_info"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="未认证"
            android:textColor="@color/font_color_style_five" />
    </RelativeLayout>

    <View
        android:id="@+id/lineFive"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/margin_style_one"
        android:background="@color/background_style_six"
        app:layout_constraintTop_toBottomOf="@id/verifyLayout" />

    <RelativeLayout
        android:id="@+id/modifyPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/lineFive">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:gravity="center_vertical"
            android:text="@string/modify_password"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <TextView
            android:id="@+id/modifyPassword"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ic_more_info"
            android:drawablePadding="10dp"
            android:gravity="center" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>