<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.visitor.VisitorFragment">

    <include
        android:id="@+id/title"
        layout="@layout/layout_common_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_style"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/companyNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/visitor_name"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one"
            />

        <EditText
            android:id="@+id/visitorName"
            android:layout_width="144dp"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:hint="@string/input_visitor_name"
            android:background="@android:color/white"/>
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/companyNameLayout"
        android:background="@color/background_style_six" />

    <RelativeLayout
        android:id="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/contact_phone"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one"
            />

        <EditText
            android:id="@+id/phone"
            android:layout_width="144dp"
            android:layout_height="@dimen/list_item_height_style"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            android:hint="@string/input_visitor_name"
            android:background="@android:color/white"/>
    </RelativeLayout>
    <View
        android:id="@+id/lineTwo"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/phoneLayout"
        android:background="@color/background_style_six" />

    <RelativeLayout
        android:id="@+id/causeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/lineTwo"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/visit_cause"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one"
            />

        <EditText
            android:id="@+id/visit_cause"
            android:layout_width="144dp"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:hint="@string/input_visit_cause"
            android:gravity="center_vertical|right"
            android:background="@android:color/white"/>
    </RelativeLayout>
    <View
        android:id="@+id/lineThree"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/causeLayout"
        android:background="@color/background_style_six" />


    <RelativeLayout
        android:id="@+id/timeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/lineThree"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:gravity="center_vertical"
            android:text="@string/visit_time"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one"
            />

        <TextView
            android:id="@+id/visit_time"
            android:layout_width="144dp"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:drawableRight="@drawable/ic_more_info"
            android:drawablePadding="8dp"
            android:text="2018-01-04 11:11"
            android:background="@android:color/white"/>
    </RelativeLayout>
    <View
        android:id="@+id/lineFour"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/timeLayout"
        android:background="@color/background_style_six" />


    <RelativeLayout
        android:id="@+id/carLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/lineFour"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/visit_car"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one"
            />

        <EditText
            android:id="@+id/visit_car"
            android:layout_width="144dp"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:hint="@string/input_visit_car"
            android:gravity="center_vertical|right"
            android:background="@android:color/white"/>
    </RelativeLayout>

    <Button
        style="@style/buttonStyle"
        app:layout_constraintTop_toBottomOf="@id/carLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/submit_apply"
        />
</androidx.constraintlayout.widget.ConstraintLayout>