<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.visitor.fragment.VisitorFragment">

    <include
        android:id="@+id/title"
        layout="@layout/layout_common_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_style"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/companyNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/visitor_name"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <EditText
            android:id="@+id/visitorName"
            android:layout_width="144dp"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:background="@android:color/white"
            android:gravity="center_vertical|right"
            android:hint="@string/input_visitor_name"
            android:textColor="@color/font_color_style_five"
            android:textSize="@dimen/font_size_style_one" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_style_six"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/companyNameLayout" />

    <RelativeLayout
        android:id="@+id/contactLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/contact_phone"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="144dp"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:background="@android:color/white"
            android:gravity="center_vertical|right"
            android:hint="@string/input_visitor_name"
            android:textColor="@color/font_color_style_five"
            android:textSize="@dimen/font_size_style_one" />
    </RelativeLayout>

    <View
        android:id="@+id/lineTwo"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_style_six"
        app:layout_constraintTop_toBottomOf="@id/contactLayout" />

    <RelativeLayout
        android:id="@+id/newPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/lineTwo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/visit_cause"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <EditText
            android:id="@+id/visit_cause"
            android:layout_width="144dp"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:background="@android:color/white"
            android:gravity="center_vertical|right"
            android:hint="@string/input_visit_cause"
            android:textColor="@color/font_color_style_five"
            android:textSize="@dimen/font_size_style_one" />
    </RelativeLayout>

    <View
        android:id="@+id/lineThree"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_style_six"
        app:layout_constraintTop_toBottomOf="@id/newPasswordLayout" />


    <RelativeLayout
        android:id="@+id/confirmPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/lineThree">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:gravity="center_vertical"
            android:text="@string/visit_time"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <TextView
            android:id="@+id/visit_time"
            android:layout_width="144dp"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:background="@android:color/white"
            android:drawableRight="@drawable/ic_more_info"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|right"
            android:text="2018-01-04 11:11"
            android:textColor="@color/font_color_style_five"
            android:textSize="@dimen/font_size_style_one" />
    </RelativeLayout>

    <View
        android:id="@+id/lineFour"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_style_six"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/confirmPasswordLayout" />


    <RelativeLayout
        android:id="@+id/carLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_style_two"
        android:paddingRight="@dimen/margin_style_two"
        app:layout_constraintTop_toBottomOf="@id/lineFour">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item_height_style"
            android:background="@drawable/selector_background_list_view_item"
            android:gravity="center_vertical"
            android:text="@string/visit_car"
            android:textColor="@color/font_color_style_six"
            android:textSize="@dimen/font_size_style_one" />

        <EditText
            android:id="@+id/visit_car"
            android:layout_width="144dp"
            android:layout_height="@dimen/list_item_height_style"
            android:layout_alignParentRight="true"
            android:background="@android:color/white"
            android:gravity="center_vertical|right"
            android:hint="@string/input_visit_car"
            android:textColor="@color/font_color_style_five"
            android:textSize="@dimen/font_size_style_one" />
    </RelativeLayout>

    <Button
        android:id="@+id/submitApply"
        style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/submit_apply"
        app:layout_constraintTop_toBottomOf="@id/carLayout" />

    <com.gx.smart.lib.widget.LoadingView
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>