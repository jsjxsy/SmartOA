<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="15dp">


    <ImageView
        android:id="@+id/carImage"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_marginTop="@dimen/margin_style_two"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/home_banner_test" />


    <TextView
        android:id="@+id/carNumber"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        android:text="车牌号码："
        app:layout_constraintStart_toEndOf="@id/carImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/carNo"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        app:layout_constraintStart_toEndOf="@id/carNumber"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="浙A12345" />


    <TextView
        android:id="@+id/enter"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        android:text="进场时间："
        app:layout_constraintStart_toEndOf="@id/carImage"
        app:layout_constraintTop_toBottomOf="@id/carNumber" />

    <TextView
        android:id="@+id/time"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        app:layout_constraintStart_toEndOf="@id/enter"
        app:layout_constraintTop_toBottomOf="@id/carNumber"
        tools:text="2019-5-6 3:56" />

    <TextView
        android:id="@+id/parking"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        app:layout_constraintStart_toEndOf="@id/carImage"
        app:layout_constraintTop_toBottomOf="@id/enter"
        tools:text="停车地点:" />

    <TextView
        android:id="@+id/parkingAddress"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        app:layout_constraintStart_toEndOf="@id/parking"
        app:layout_constraintTop_toBottomOf="@id/enter"
        tools:text="C区2530" />

    <TextView
        android:id="@+id/parkingTime"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        app:layout_constraintStart_toEndOf="@id/carImage"
        app:layout_constraintTop_toBottomOf="@id/parking"
        tools:text="停车时长:" />

    <TextView
        android:id="@+id/parkingTimeValue"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        app:layout_constraintStart_toEndOf="@id/parkingTime"
        app:layout_constraintTop_toBottomOf="@id/parking"
        tools:text="3小时45分钟" />

    <TextView
        android:id="@+id/parkingPayment"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        app:layout_constraintStart_toEndOf="@id/carImage"
        app:layout_constraintTop_toBottomOf="@id/parkingTime"
        tools:text="停车费用:" />

    <TextView
        android:id="@+id/payment"
        style="@style/textViewStyleTwo"
        android:layout_marginStart="@dimen/margin_style_four"
        app:layout_constraintStart_toEndOf="@id/parkingPayment"
        app:layout_constraintTop_toBottomOf="@id/parkingTime"
        tools:text="25元" />
</androidx.constraintlayout.widget.ConstraintLayout>
