<resources>

    <style name="editTextStyle">
        <item name="android:layout_height">@dimen/edit_text_height_style</item>
        <item name="android:layout_marginLeft">@dimen/margin_style_two</item>
        <item name="android:layout_marginRight">@dimen/margin_style_two</item>
        <item name="android:background">@drawable/shape_edit_text_background_color</item>
        <item name="android:drawablePadding">8.5dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:textSize">@dimen/font_size_style_one</item>
        <item name="android:textColor">@color/font_color_style_one</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_height">@dimen/button_height_style</item>
        <item name="android:background">@drawable/shape_button_background_color</item>
        <item name="android:textSize">@dimen/font_size_style_two</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textColor">@color/font_color_style_three</item>
    </style>

    <style name="bottomTabTitle">
        <item name="android:textSize">@dimen/font_size_style_four</item>
        <item name="android:textColor">@drawable/selector_radio_button_text_color_state</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>


    <style name="iconStyle">
        <item name="android:textSize">@dimen/font_size_style_three</item>
        <item name="android:textColor">@color/font_color_style_six</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="switchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#FF195FC7</item>
        <item name="colorSwitchThumbNormal">#FFF1F1F1</item>
        <item name="android:colorForeground">#FF2F2F2F</item>
    </style>

    <style name="recycleViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="passwordEditTextStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/font_color_style_six</item>
        <item name="android:textSize">@dimen/font_size_style_one</item>
        <item name="android:maxLength">16</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:digits">@string/password_input</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/margin_style_two</item>
        <item name="android:textColor">@color/font_color_style_six</item>
        <item name="android:textSize">@dimen/font_size_style_six</item>
    </style>

    <style name="textViewStyleTwo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_style_four</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/font_color_style_six</item>
        <item name="android:textSize">@dimen/font_size_style_two</item>
    </style>

    <style name="textViewStyleThree">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/font_color_style_six</item>
        <item name="android:textSize">@dimen/font_size_style_two</item>
        <item name="android:background">@drawable/shape_text_view_background</item>
    </style>
</resources>
