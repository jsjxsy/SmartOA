<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.gx.smart.smartoa.activity.ui.home.HomeFragment"
        android:label="@string/main_title_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_navigation_home_to_mineActionActivity"
            app:destination="@id/mineActionActivity" >
            <argument
                android:name="fromHome"
                android:defaultValue="fromHome"
                app:argType="string"
                app:nullable="false" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/openDoorFragment"
        android:name="com.gx.smart.smartoa.activity.ui.open.OpenDoorFragment"
        android:label="open_door_fragment"
        tools:layout="@layout/open_door_fragment" />

    <fragment
        android:id="@+id/mineFragment"
        android:name="com.gx.smart.smartoa.activity.ui.mine.MineFragment"
        android:label="fragment_mine"
        tools:layout="@layout/fragment_mine">
        <action
            android:id="@+id/action_mineFragment_to_mineCompanyActivity"
            app:destination="@id/mineCompanyActivity" />
        <action
            android:id="@+id/action_mineFragment_to_meetingScheduleActivity"
            app:destination="@id/meetingScheduleActivity" />
        <action
            android:id="@+id/action_mineFragment_to_settingActivity"
            app:destination="@id/settingActivity" />
        <action
            android:id="@+id/action_mineFragment_to_mineActionActivity"
            app:destination="@id/mineActionActivity">
            <argument
                android:name="fromMine"
                android:defaultValue="fromMine"
                app:argType="string"
                app:nullable="false" />
        </action>
        <action
            android:id="@+id/action_mineFragment_to_visitorActivity"
            app:destination="@id/visitorActivity" />
        <action
            android:id="@+id/action_mineFragment_to_userActivity"
            app:destination="@id/userActivity" />
    </fragment>

    <activity
        android:id="@+id/meetingScheduleActivity"
        android:name="com.gx.smart.smartoa.activity.ui.meetings.MeetingScheduleActivity"
        android:label="meeting_schedule_fragment"
        tools:layout="@layout/meeting_schedule_fragment">
        <argument
            android:name="toMeetingMyReservationFragment"
            android:defaultValue="toMeetingMyReservationFragment"
            app:argType="string"
            app:nullable="false" />
    </activity>
    <activity
        android:id="@+id/mineCompanyActivity"
        android:name="com.gx.smart.smartoa.activity.ui.company.MineCompanyActivity"
        android:label="fragment_mine_company"
        tools:layout="@layout/fragment_mine_company" />
    <activity
        android:id="@+id/settingActivity"
        android:name="com.gx.smart.smartoa.activity.ui.setting.SettingActivity"
        android:label="SettingActivity"
        tools:layout="@layout/setting_fragment" />
    <activity
        android:id="@+id/mineActionActivity"
        android:name="com.gx.smart.smartoa.activity.ui.action.MineActionActivity"
        android:label="MineActionActivity"
        tools:layout="@layout/fragment_mine_action" >
    </activity>

    <activity
        android:id="@+id/visitorActivity"
        android:name="com.gx.smart.smartoa.activity.ui.visitor.activity.VisitorActivity"
        android:label="VisitorActivity"
        tools:layout="@layout/fragment_mine_visitor">
        <argument
            android:name="toMineVisitorRecordFragment"
            android:defaultValue="toMineVisitorRecordFragment"
            app:argType="string"
            app:nullable="false" />
    </activity>
    <activity
        android:id="@+id/userActivity"
        android:name="com.gx.smart.smartoa.activity.ui.user.UserActivity"
        android:label="UserActivity"
        tools:layout="@layout/fragment_mine_user_info" />

    <action
        android:id="@+id/action_global_navigation_home"
        app:destination="@id/navigation_home" />
    <action
        android:id="@+id/action_global_mineFragment"
        app:destination="@id/mineFragment" />
    <action
        android:id="@+id/action_global_openDoorFragment"
        app:destination="@id/openDoorFragment" />


</navigation>