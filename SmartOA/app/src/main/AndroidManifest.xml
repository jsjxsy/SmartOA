<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gx.smart.smartoa">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".SmartOAApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ui.air.AirQualityActivity"></activity>
        <activity android:name=".activity.ui.setting.SettingActivity" />
        <activity android:name=".activity.ui.repair.RepairActivity" />
        <activity android:name=".activity.ui.work.SharedWorkActivity" />
        <activity android:name=".activity.ui.meetings.MeetingScheduleActivity" />
        <activity android:name=".activity.ui.open.OpenDoorActivity" />
        <activity android:name=".activity.ui.company.MineCompanyActivity" />
        <activity android:name=".activity.ui.visitor.VisitorActivity" />
        <activity android:name=".activity.ui.attendance.AttendanceActivity" />
        <activity android:name=".activity.ui.features.AllFeatureActivity" />
        <activity android:name=".activity.ui.messages.MessageActivity" />
        <activity android:name=".activity.ui.environmental.EnvironmentalActivity" />
        <activity
            android:name=".activity.ui.splash.SplashActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ui.login.LoginActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateVisible|adjustResize" />
    </application>

</manifest>